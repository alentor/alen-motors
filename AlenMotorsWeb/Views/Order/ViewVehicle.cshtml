                    @*@Html.EditorFor(User => User., new { htmlAttributes = new { @class = "form-control input-sm" } })*@
                    @Html.TextBoxFor(model => model.ManufacturYear, new { @class = "form-control input-sm", @id = "disabledInput", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Price, new { @class = "control-label col-md-4" })
                <div class="col-md-5">
                    @*@Html.EditorFor(User => User., new { htmlAttributes = new { @class = "form-control input-sm" } })*@
                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control input-sm", @id = "disabledInput", @disabled = "disabled" })
                </div>
